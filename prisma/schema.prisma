generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"         // <â€” was "sqlite"
  url      = env("DATABASE_URL")
}

model Agent {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String
  extension  String   @unique
  password   String
  companies  String   @default("[]")
  available  Boolean  @default(false)
  isAdmin    Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model CallLog {
  callSid   String   @id
  from      String
  to        String
  direction String
  status    String
  duration  Int?
  company   String
  startedAt DateTime @default(now())
  endedAt   DateTime?
}

model Recording {
  id           String   @id @default(cuid())
  recordingSid String   @unique
  callSid      String
  company      String
  url          String
  duration     Int?
  createdAt    DateTime @default(now())
}
